@model IEnumerable<SurveyTool.Models.Survey>

@{
    ViewBag.Title = "Index";
}

<h2>Survey Reports</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Surveys",new { id=item.SurveyId })">
                @Html.DisplayFor(modelItem => item.Name)
            </a>
            
        </td>
        <td>
            
            @Html.ActionLink("See Report", "Surveys", new { id=item.SurveyId })
            
        </td>
    </tr>
}

</table>
